# Server configuration
HOST=0.0.0.0
PORT=8080
DEBUG=False
LOG_LEVEL=INFO

# AI Model settings
GEMINI_MODEL=gemini-2.5-flash-lite
# Maximum output tokens for analysis
MAX_TOKENS=4096
# Controls randomness (0.0 to 1.0)
TEMPERATURE=0.3
# Timeout for Gemini API calls in seconds
GEMINI_TIMEOUT_SECONDS=8

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate limiting
DAILY_RATE_LIMIT=20
GLOBAL_RATE_LIMIT=1000
RATE_LIMIT_TIMEZONE=UTC
# Redis connection timeout
REDIS_TIMEOUT_SECONDS=2

# Request limits (bytes)
MAX_REQUEST_SIZE=1048576
# Max source code length (characters)
MAX_CODE_LENGTH=50000
# Max analysis response size (bytes)
MAX_ANALYSIS_SIZE=102400

# Feature settings
# Share link TTL in seconds (default: 7 days)
SHARE_TTL_SECONDS=604800
# Comma-separated allowed file extensions for analysis
ALLOWED_EXTENSIONS=.py,.js,.ts,.jsx,.tsx,.cpp,.c,.h,.hpp,.java,.go,.rs,.rb,.php,.swift,.kt,.cs,.scala,.r,.m,.sh,.sql,.html,.css
