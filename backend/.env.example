# Gemini API Key (required)
GEMINI_API_KEY=your_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
MAX_TOKENS=4096
TEMPERATURE=0.3

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Upstash Redis (required for rate limiting and share feature)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Rate Limiting
DAILY_RATE_LIMIT=20
GLOBAL_RATE_LIMIT=1000
RATE_LIMIT_TIMEZONE=UTC

# Request Limits
MAX_REQUEST_SIZE=1048576
MAX_CODE_LENGTH=50000

# Share Feature (TTL in seconds, default 7 days)
SHARE_TTL_SECONDS=604800

